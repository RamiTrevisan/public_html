@Styles.Render("~/bundles/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    Layout = null;
    ViewBag.Title = "Error";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        <div class="card">
            <div class="card-header"><h4><i class="fas fa-solid fa-exclamation text-danger"></i> <b>Error</b></h4></div>



            <div class="card-body">
                <h5 class="card-title">La cancha "@ViewBag.Cancha" no está disponible el día @ViewBag.Fecha a las @ViewBag.Horario</h5>
                <p class="card-text text-danger">@ViewBag.Error</p>
                <a href="@Url.Action("Canchas", "Turnos")" class="btn btn-primary">Volver</a>
            </div>


        </div>
    </div>

</body>
</html>
